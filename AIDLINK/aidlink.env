# AidLink Environment Variables (local-only)
# ----------------------------------------------------
# This file should NEVER be committed. It is listed in .gitignore.
# Add your real keys locally, or export them in your deployment platform.

# 211 National Data Platform API
API_211_KEY=replace_with_211_api_key
API_211_BASE_URL=https://api.211.org

# Google Places / Maps APIs
# https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=replace_with_google_maps_key
GOOGLE_PLACES_API_KEY=replace_with_google_places_key

# Geoapify API
# https://myprojects.geoapify.com/
GEOAPIFY_API_KEY=replace_with_geoapify_key

# Google Gemini
GEMINI_API_KEY=replace_with_gemini_key

# MongoDB (optional)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=aidlink

# SQLite Database
SQLITE_DB_PATH=./data/aidlink.db

# Data Collection Settings
DATA_REFRESH_HOURS=24
MAX_RESULTS_PER_API=1000
CACHE_DURATION_HOURS=6

# ML Model Settings
MODEL_UPDATE_FREQUENCY_DAYS=7
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CLASSIFICATION_MODEL=./models/resource_classifier.pkl

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/aidlink.log

# Development Settings
DEBUG=True
FLASK_ENV=development
PORT=5006
